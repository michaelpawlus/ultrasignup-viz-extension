{
  "manifest_version": 3,
  "name": "UltraSignup Race Visualizer",
  "version": "1.0.0",
  "description": "Adds visual charts to UltraSignup race results pages to show finish time distributions",
  "permissions": [
    "https://ultrasignup.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://ultrasignup.com/results_event.aspx*"],
      "js": ["chart.min.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

